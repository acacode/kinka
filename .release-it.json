{
    "non-interactive": true,
    "scripts": {
        "changelog": "git log --pretty=format:\"* %s (%h)\""
    },
    "git": {
        "requireCleanWorkingDir": false,
        "requireUpstream": false,
        "commit": true,
        "tag": true,
        "push": true,
        "commitMessage": "Release ${name} ${version} [ci skip]"
    },
    "npm": {
        "publish": false
    },
    "github": {
        "release": true
    }
}